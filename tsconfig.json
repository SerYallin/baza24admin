{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/*": ["src/*", "dist/*"],
      "@middlewares/*": ["src/middlewares/*", "dist/middlewares/*"],
      "@components/*": ["src/components/*", "dist/components/*"],
      "@locales/*": ["src/locales/*", "dist/locales/*"],
      "@entities/*": ["src/entities/*", "dist/entities/*"],
      "@resources/*": ["src/resources/*", "dist/resources/*"],
      "@admin/*": ["src/admin/*", "dist/admin/*"],
      "@utils/*": ["src/utils/*", "dist/utils/*"],
      "@db/*": ["src/db/*", "dist/db/*"],
    }
  }
}
