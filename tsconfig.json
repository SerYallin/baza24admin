{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "types": ["express", "node", "jest"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "typeRoots": ["./node_modules/@types",
      "./src"],
    "paths": {
      "@app/*": ["src/*", "dist/*"],
      "@middlewares/*": ["src/middlewares/*", "dist/middlewares/*"],
      "@components/*": ["src/components/*", "dist/components/*"],
      "@locales/*": ["src/locales/*", "dist/locales/*"],
      "@entities/*": ["src/entities/*", "dist/entities/*"],
      "@resources/*": ["src/resources/*", "dist/resources/*"],
      "@admin/*": ["src/admin/*", "dist/admin/*"],
      "@utils/*": ["src/utils/*", "dist/utils/*"],
      "@db/*": ["src/db/*", "dist/db/*"],
    },
    "plugins": [],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
